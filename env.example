# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_NAME=codebase-intelligence

# Azure Storage Configuration (for storing parsed outputs)
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_STORAGE_CONTAINER_NAME=parsed-outputs

# Database Configuration (Azure SQL or local)
DATABASE_URL=mssql+pyodbc://user:pass@server/database?driver=ODBC+Driver+17+for+SQL+Server
# OR MongoDB
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=codebase_intelligence

# Neo4j (optional - for knowledge graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Application Settings
LOG_LEVEL=INFO
OUTPUT_DIR=./outputs
CONFIDENCE_THRESHOLD=0.75

# Databricks Configuration
DATABRICKS_WORKSPACE_URL=https://adb-xxxxx.azuredatabricks.net
DATABRICKS_TOKEN=your-databricks-token

# Hadoop Configuration
HADOOP_REPO_PATH=/path/to/hadoop/repos
ABINITIO_REPO_PATH=/path/to/abinitio/files
